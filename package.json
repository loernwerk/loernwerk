{

  "name": "loernwerk",

  "private": true,

  "version": "1.0",

  "scripts": {

    "dev": "concurrently -c \"auto\" \"npm:dev:backend\" \"npm:dev:frontend\"",

    "dev:backend": "ts-node --project tsconfig.node.json backend/loernwerkServer.ts",

    "dev:frontend": "vite dev frontend",

    "build": "npm run build:frontend && npm run build:backend && npm run build:postscript",

    "build:backend": "tsc --project tsconfig.node.json",

    "build:frontend": "vue-tsc && vite build frontend --emptyOutDir",

    "build:postscript": "ts-node --project tsconfig.node.json build_postscript.ts",

    "start": "cd build && node backend/loernwerkServer.js",

    "preview": "vite preview frontend",

    "lint": "eslint .",

    "prettier": "prettier --write .",

    "prepare": "husky install",

    "test": "npm run test:unit && npm run test:component && npm run test:e2e",

    "test:unit": "jest",

    "test:component": "vitest",

    "test:e2e": "playwright test"

  },

  "dependencies": {

    "@fortawesome/fontawesome-svg-core": "^6.4.0",

    "@fortawesome/free-solid-svg-icons": "^6.4.0",

    "@fortawesome/vue-fontawesome": "^3.0.3",

    "@lumieducation/h5p-express": "^9.2.2",

    "@lumieducation/h5p-server": "^9.2.1",

    "@lumieducation/h5p-webcomponents": "^9.2.2",

    "@types/jest": "^29.5.3",

    "@vue/test-utils": "^2.4.1",

    "axios": "^1.4.0",

    "bcrypt": "^5.1.0",

    "connect-history-api-fallback": "^2.0.0",

    "cors": "^2.8.5",

    "decompress": "^4.2.1",

    "dotenv": "^16.3.1",

    "express": "^4.18.2",

    "express-fileupload": "^1.4.0",

    "express-session": "^1.17.3",

    "i18next": "^23.2.8",

    "i18next-fs-backend": "^2.1.5",

    "i18next-http-middleware": "^3.3.2",

    "jest": "^29.6.1",

    "memorystore": "^1.6.7",

    "pdfjs": "^2.5.0",

    "quill": "^1.3.7",

    "quill-delta": "^5.1.0",

    "reflect-metadata": "^0.1.13",

    "sqlite3": "^5.1.6",

    "ts-jest": "^29.1.1",

    "typeorm": "^0.3.17",

    "vitest": "^0.33.0",

    "vue": "^3.2.47",

    "vue-draggable-next": "^2.2.1",

    "vue-i18n": "^9.2.2",

    "vue-router": "^4.2.2"

  },

  "devDependencies": {

    "@playwright/test": "^1.36.2",

    "@types/bcrypt": "^5.0.0",

    "@types/cors": "^2.8.13",

    "@types/decompress": "^4.2.4",

    "@types/express": "^4.17.17",

    "@types/express-fileupload": "^1.4.1",

    "@types/express-session": "^1.17.7",

    "@types/node": "^20.3.2",

    "@types/quill": "^2.0.10",

    "@typescript-eslint/eslint-plugin": "^5.60.0",

    "@typescript-eslint/parser": "^5.60.0",

    "@vitejs/plugin-vue": "^4.1.0",

    "autoprefixer": "^10.4.14",

    "concurrently": "^8.2.0",

    "eslint": "^8.43.0",

    "eslint-config-prettier": "^8.8.0",

    "eslint-plugin-jsdoc": "^46.3.0",

    "eslint-plugin-vue": "^9.15.1",

    "husky": "^8.0.0",

    "jsdom": "^22.1.0",

    "lint-staged": "^13.2.2",

    "postcss": "^8.4.24",

    "prettier": "^2.8.8",

    "tailwindcss": "^3.3.2",

    "ts-node": "^10.9.1",

